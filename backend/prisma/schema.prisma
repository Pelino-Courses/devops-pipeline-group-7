generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum ReportStatus {
  PENDING
  RESOLVED
}

model User {
  id            String   @id @default(uuid())
  username      String   @unique
  email         String   @unique
  password_hash String
  role          UserRole @default(USER)
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  
  // Relations
  created_polls Poll[]
  votes         Vote[]
  reports       Report[]
  admin_logs    AdminLog[]
}

model Poll {
  id          String   @id @default(uuid())
  title       String
  description String?
  category    String
  is_active   Boolean  @default(true)
  starts_at   DateTime
  ends_at     DateTime
  created_at  DateTime @default(now())
  
  // Foreign keys
  created_by  String
  user        User      @relation(fields: [created_by], references: [id])
  
  // Relations
  options     PollOption[]
  votes       Vote[]
  reports     Report[]
}

model PollOption {
  id          String @id @default(uuid())
  option_text String
  vote_count  Int    @default(0)
  order_index Int
  
  // Foreign keys
  poll_id     String
  poll        Poll    @relation(fields: [poll_id], references: [id])
  
  // Relations
  votes       Vote[]
}

model Vote {
  id        String   @id @default(uuid())
  voted_at  DateTime @default(now())
  ip_address String?
  
  // Foreign keys
  poll_id   String
  poll      Poll        @relation(fields: [poll_id], references: [id])
  
  option_id String
  option    PollOption  @relation(fields: [option_id], references: [id])
  
  user_id   String?
  user      User?       @relation(fields: [user_id], references: [id])
}

model Report {
  id          String       @id @default(uuid())
  reason      String
  status      ReportStatus @default(PENDING)
  created_at  DateTime     @default(now())
  
  // Foreign keys
  poll_id     String
  poll        Poll         @relation(fields: [poll_id], references: [id])
  
  reported_by String
  user        User         @relation(fields: [reported_by], references: [id])
}

model AdminLog {
  id             String   @id @default(uuid())
  action         String
  resource_type  String
  resource_id    String
  details        Json?
  performed_at   DateTime @default(now())
  
  // Foreign keys
  admin_id       String
  admin          User     @relation(fields: [admin_id], references: [id])
}